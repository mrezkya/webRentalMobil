<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Hello, world!</title>
  </head>
  <body class="container mt-5">
    <div class="row">
      <div class="col">
        <h1>Hello, <%= username %></h1>
        <p class="blockquote"> ini adalah histori kamu :)</p>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nama Kendaraan </td>
              <th>tanggal pengambilan</td>
              <th>tanggal dikembalikan</td>
              <th>periode</td>
                <th>aksi</th>
            </tr>
          </thead>
          <tbody>
          <% if(result && result.length > 0){ %>
          <% result.forEach((item) => { %>
            <tr>
            <td><%= item.nama_kendaraan %></td>
            <td><%= item.tanggal_pengambilan %></td>
            <td><%= item.tanggal_pengembalian %></td>
            <td><%= item.periode_sewa %></td>
            <td><a href="/cetak/<%= item.user_id %>/<%= item.nama_kendaraan %>">cetak</a></td>
          </tr>
          <% }) %>
          <% } else { %>
            <tr>Tidak ada data pemesananan</tr> <br>
            <tr>Lakukan pemesanan di : <a href="/">Sini</a></tr>
            <% } %>
          </tbody>
        </table>
        </div>
        <div class="col">
          <a href="/logout" class="btn btn-danger"> logout <span class="glyphicon glyphicon-off"></span></a>
          <a href="/" class="btn btn-success"> kembali           <span class="glyphicon glyphicon-share-alt"></span></a>
          
        </div>
      </div>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
